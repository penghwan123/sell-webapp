$green = #02a774;
$yellow = #F5A100;
$bc = #e4e4e4;

/**
* 一像素边框
*/
// 一像素上边框
top-border-1px($color)
    position: relative
    &::before
        display: block
        position: absolute
        z-index: 200
        top: 0
        left: 0
        width: 100%
        height: 1px
        background-color: $color
        content: ''
// 一像素下边框
bottom-border-1px($color)
    position: relative
    &:after
        // 定义一个伪类，将它置于元素的底部
        display: block
        position: absolute
        left: 0
        bottom: 0
        width: 100%
        height: 1px
        background-color: $color
        content: ''
//根据像素比缩放1px像素边框
@media only screen and (-webkit-min-device-pixel-ratio: 2), (min-device-pixel-ratio: 2)
    .top-border-1px, .bottom-border-1px
        &::after
            -webkit-transform: scaleY(.5)
            transform: scaleY(.5)

@media only screen and (-webkit-device-pixel-ratio: 3), (min-device-pixel-ratio: 3)
    .top-border-1px, .bottom-border-1px
        &::after
            -webkit-transform: scaleY(.333333)
            transform: scaleY(.333333)

/**
* 去除1像素边框
*/
border-none()
    &:after
        display: none

/**
* 根据像素比来使用2x图和3x图
*/
bg-image($url)
    background-image: url($url + "@2x.png")
    @media (-webkit-min-device-pixel-ratio: 3), (min-device-pixel-ratio: 3)
        background-image: url($url + "@3x.png")